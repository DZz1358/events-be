{
    "compilerOptions": {
      "module": "ESNext",
      "moduleResolution": "Bundler",
      "target": "ES2020",
      "jsx": "react",
      "allowImportingTsExtensions": true,
      "strictNullChecks": true,
      "strictFunctionTypes": true
    },
    "exclude": [
      "node_modules",
      "**/node_modules/*"
    ],
    "prettier": {
      "semi": false,
      "singleQuote": true,
      "tabWidth": 2,
      "useTabs": false,
      "htmlWhitespaceSensitivity": "ignore"
    }
  }